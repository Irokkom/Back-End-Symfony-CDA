<div class="col">
    <div class="card h-100 shadow-sm hover-card">
        <div class="placeholder-img">
            {% if article.imageFilename is defined and article.imageFilename %}
                <img src="{{ asset('uploads/articles/' ~ article.imageFilename) }}" class="img-fluid" alt="{{ article.title }}">
            {% endif %}
        </div>
        <div class="card-body d-flex flex-column">
            <div class="mb-2">
                {% for category in article.categories %}
                    <span class="badge category-badge me-1">{{ category.name }}</span>
                {% endfor %}
            </div>
            <h5 class="card-title">
                <a href="{{ path('app_article_show', {'id': article.id}) }}">
                    {{ article.title }}
                </a>
            </h5>
            <p class="card-text text-secondary mb-3">{{ article.content|striptags|slice(0, 100) }}...</p>
            
            <div class="mt-auto d-flex justify-content-between align-items-center">
                <div class="article-author">
                    <i class="fas fa-user-circle"></i> {{ article.author.username }}
                </div>
                <div class="article-meta">
                    <i class="fas fa-calendar-alt"></i> {{ article.createdAt|date('d/m/Y') }}
                </div>
            </div>
            
            <div class="mt-3">
                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-outline-primary w-100">
                    Lire la suite <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>
