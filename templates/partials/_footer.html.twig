{# Script pour le footer sticky #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonction pour ajuster la position du footer
    function adjustFooter() {
        var body = document.body;
        var html = document.documentElement;
        var footer = document.querySelector('.footer');
        
        var windowHeight = window.innerHeight;
        var bodyHeight = Math.max(
            body.scrollHeight, body.offsetHeight,
            html.clientHeight, html.scrollHeight, html.offsetHeight
        );
        
        // Si le contenu est plus petit que la fenêtre, faire en sorte que le footer soit en bas
        if (bodyHeight < windowHeight) {
            footer.style.position = 'absolute';
            footer.style.bottom = '0';
            footer.style.width = '100%';
        } else {
            footer.style.position = 'relative';
        }
    }
    
    // Ajuster au chargement de la page
    adjustFooter();
    
    // Ajuster au redimensionnement de la fenêtre
    window.addEventListener('resize', adjustFooter);
});
</script>
