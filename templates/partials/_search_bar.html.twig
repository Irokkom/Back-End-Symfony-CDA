{% if form is defined %}
<!-- Formulaire de recherche avancée -->
<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-filter me-2"></i> Recherche avancée
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form, {'method': 'GET', 'attr': {'id': 'search-form'}, 'action': path('app_search')}) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.query) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.category) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.dateFrom) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.dateTo) }}
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search me-2"></i> Rechercher
            </button>
            <button type="button" id="resetForm" class="btn btn-outline-secondary">
                <i class="fas fa-redo me-2"></i> Réinitialiser
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Réinitialiser le formulaire
        document.getElementById('resetForm').addEventListener('click', function() {
            document.querySelectorAll('input[type="text"], input[type="search"], input[type="date"], select').forEach(function(input) {
                input.value = '';
            });
            // Soumettre le formulaire vide
            this.closest('form').submit();
        });
    });
</script>
{% else %}
<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle me-2"></i> La variable "form" n'est pas définie. Veuillez passer un formulaire à ce partial.
</div>
{% endif %}
