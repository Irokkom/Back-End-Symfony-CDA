{% extends 'base.html.twig' %}

{% block title %}{% if category_name is defined %}Articles - {{ category_name }}{% else %}Articles{% endif %}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row">
            <!-- Sidebar avec les catégories -->
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Catégories</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for category in categories %}
                            <a href="{{ path('app_article_by_category', {'name': category.name}) }}" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                {{ category.name }}
                                <span class="badge bg-primary rounded-pill">{{ category.articles|length }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Liste des articles -->
            <div class="col-md-9">
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h2">
                            {% if category_name is defined %}
                                Articles - {{ category_name }}
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-sm ms-2">
                                    <i class="fas fa-times"></i> Retirer le filtre
                                </a>
                            {% else %}
                                Articles
                            {% endif %}
                        </h1>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_articles_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Nouvel article
                            </a>
                        {% endif %}
                    </div>

                    <!-- Barre de recherche avec filtres avancés -->
                    <div class="search-navbar mt-3 bg-light p-3 rounded">
                        {{ form_start(search_form, {'attr': {'class': 'search-form'}}) }}
                            <!-- Barre de recherche principale -->
                            <div class="mb-3">
                                {{ form_widget(search_form.query, {'attr': {'placeholder': 'Rechercher un article par titre, contenu ou catégorie...'}}) }}
                                <button type="submit" class="btn btn-primary search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            
                            <!-- Filtres alignés -->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-2">
                                        <label class="form-label fw-bold">Catégorie</label>
                                        {{ form_widget(search_form.category) }}
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="mb-2">
                                        <label class="form-label fw-bold">Date de début</label>
                                        {{ form_widget(search_form.dateFrom) }}
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="mb-2">
                                        <label class="form-label fw-bold">Date de fin</label>
                                        {{ form_widget(search_form.dateTo) }}
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Boutons alignés à droite -->
                            <div class="d-flex justify-content-end mt-3">
                                <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-times me-1"></i> Réinitialiser les filtres
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter me-1"></i> Filtrer
                                </button>
                            </div>
                        {{ form_end(search_form) }}
                    </div>

                    <!-- Liste des articles -->
                    <div class="mt-4">
                        {% if articles|length > 0 %}
                            <div class="row row-cols-1 row-cols-md-2 g-4">
                                {% for article in articles %}
                                    <div class="col">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="text-decoration-none">
                                                        {{ article.title }}
                                                    </a>
                                                </h5>
                                                <h6 class="card-subtitle mb-2 text-muted">
                                                    {% for category in article.categories %}
                                                        <span class="badge bg-secondary">{{ category.name }}</span>
                                                    {% endfor %}
                                                </h6>
                                                <p class="card-text">{{ article.content|striptags|slice(0, 150) }}...</p>
                                            </div>
                                            <div class="card-footer text-muted">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small>Par {{ article.author.username }}</small>
                                                    <small>{{ article.createdAt|date('d/m/Y') }}</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i> Aucun article ne correspond à votre recherche.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .search-navbar {
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        
        .search-form .form-control,
        .search-form .form-select {
            border-color: #e9ecef;
            border-radius: 4px;
            height: 42px;
        }
        
        .search-form input[type="search"] {
            padding-right: 40px;
        }
        
        .search-form .search-btn {
            position: absolute;
            right: 5px;
            top: 5px;
            border-radius: 4px;
            padding: 6px 12px;
        }
        
        .search-form .mb-3 {
            position: relative;
        }
    </style>
{% endblock %}
