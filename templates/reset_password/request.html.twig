{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialiser votre mot de passe</h1>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <p class="mb-4">
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>

                    {{ form_start(requestForm) }}
                        <div class="mb-3">
                            {{ form_widget(requestForm.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre adresse email'
                                }
                            }) }}
                            <small class="form-text text-muted">
                                Entrez l'adresse email associée à votre compte
                            </small>
                            {{ form_errors(requestForm.email) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">
                                Envoyer le lien de réinitialisation
                            </button>
                        </div>
                    {{ form_end(requestForm) }}

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
