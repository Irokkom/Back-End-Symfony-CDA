{# Template personnalisé pour les erreurs 403 (Accès interdit) #}
{% extends 'base.html.twig' %}

{% block title %}Accès interdit{% endblock %}

{% block body %}
<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-template">
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-danger mb-3"></i>
                    <h1 class="display-4">Erreur 403</h1>
                    <h2>Accès interdit</h2>
                </div>
                
                <div class="error-details mb-4">
                    <p class="lead">Vous n'avez pas les droits nécessaires pour accéder à cette page.</p>
                    <p>Si vous pensez qu'il s'agit d'une erreur, veuillez contacter l'administrateur du site.</p>
                </div>
                
                <div class="error-actions">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
