{# Template personnalisé pour les erreurs génériques #}
{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }}{% endblock %}

{% block body %}
<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-template">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning mb-3"></i>
                    <h1 class="display-4">Erreur {{ status_code }}</h1>
                    <h2>{{ status_text }}</h2>
                </div>
                
                <div class="error-details mb-4">
                    <p class="lead">Désolé, une erreur inattendue est survenue.</p>
                    <p>Notre équipe a été informée de ce problème.</p>
                </div>
                
                <div class="error-actions">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left me-2"></i>Page précédente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
