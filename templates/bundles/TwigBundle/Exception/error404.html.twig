{# Template personnalisé pour les erreurs 404 (Page non trouvée) #}
{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="error-template">
                <div class="mb-4">
                    <i class="fas fa-map-signs fa-5x text-muted mb-3"></i>
                    <h1 class="display-4">Erreur 404</h1>
                    <h2>Oups! Page non trouvée</h2>
                </div>
                
                <div class="error-details mb-4">
                    <p class="lead">Désolé, la page que vous recherchez n'existe pas ou a été déplacée.</p>
                    <p>Vérifiez l'URL ou utilisez les liens ci-dessous pour retourner à la navigation.</p>
                </div>
                
                <div class="error-actions">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                    <a href="{{ path('app_contact') }}" class="btn btn-outline-secondary btn-lg ms-2">
                        <i class="fas fa-envelope me-2"></i>Nous contacter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
