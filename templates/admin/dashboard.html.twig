{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Tableau de bord administrateur</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Gestion des utilisateurs</h5>
                        <p class="card-text">Gérer les utilisateurs et les administrateurs du site.</p>
                        <a href="{{ path('admin_users_list') }}" class="btn btn-primary">
                            <i class="fas fa-users me-1"></i> Voir les utilisateurs
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Gestion des articles</h5>
                        <p class="card-text">Gérer les articles du site.</p>
                        <a href="{{ path('admin_articles_list') }}" class="btn btn-primary">
                            <i class="fas fa-newspaper me-1"></i> Voir les articles
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Gestion des catégories</h5>
                        <p class="card-text">Gérer les catégories d'articles.</p>
                        <a href="{{ path('app_category_index') }}" class="btn btn-primary">
                            <i class="fas fa-tags me-1"></i> Voir les catégories
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Retour à l'accueil
            </a>
        </div>
    </div>

    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-primary {
            border-radius: 8px;
            padding: 8px 16px;
        }
    </style>
{% endblock %}
